<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body { font-family: Arial, sans-serif; background-color: #accfb9; margin:
      0; display: flex; justify-content: center; align-items: center; height:
      100vh; } div{ border: 2px solid black; padding: 20px; justify-content:
      center; background-color:#dafbe6; } h1 { margin-bottom: 40px; margin-top:
      0; color: #074311; } form { display: flex; flex-direction: column; } label
      { font-weight: bold; margin-bottom: 2px; } input[type="email"],
      input[type="text"] { padding: 10px; border: 1px solid #ced4da;
      border-radius: 5px; transition: border-color 0.15s ease-in-out, box-shadow
      0.15s ease-in-out; width: 100%; box-sizing: border-box; }
      input[type="email"]:focus, input[type="text"]:focus { border-color:
      #007bff; outline: 0; box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); }
      button { background-color: #187340; color: #ffffff; border: none; padding:
      12px 20px; border-radius: 5px; cursor: pointer; transition:
      background-color 0.3s ease; width: 100%; } button:hover {
      background-color: #14c92c; } button[type="submit"] { margin-top: 10px; }
    </style>

  </head>
  <body>
    <div>

      <h1>Verification</h1>
      <form method="POST" action="send">
        <p>
          <label for="email">Send to:</label>
          <input type="email" name="email" id="email" required />

          <button type="submit">send otp</button>
        </p>
      </form>
      <form method="POST" action="verify">

        <p>
          <label for="otp">Enter otp</label>
          <input type="text" name="otp" required />
          <button type="submit">Submit</button>
        </p>

      </form>
    </div>
  </body>
</html>